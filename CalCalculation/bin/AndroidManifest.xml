<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.TyberianSoft.calcalculation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" 
        />
 <uses-permission android:name="android.permission.INTERNET" />
    <application
        
        android:allowBackup="true"
        android:icon="@drawable/calculator"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.TyberianSoft.calcalculation.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.TyberianSoft.calcalculation.TimesTable"
            android:label="@string/title_activity_times_table"
            android:parentActivityName="com.TyberianSoft.calcalculation.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.TyberianSoft.calcalculation.MainActivity" />
        </activity>
        <activity
            android:name="com.TyberianSoft.calcalculation.MathematicalOperationsGui"
            android:label="@string/title_activity_mathematical_operations_gui"
            android:parentActivityName="com.TyberianSoft.calcalculation.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.TyberianSoft.calcalculation.MainActivity" />
        </activity>
    </application>
</manifest>
